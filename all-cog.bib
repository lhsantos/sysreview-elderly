 keyword = {Games;Guidelines;Protocols;Senior citizens;Standards;Training;Usability;Efficacy assessment;Elderly care intervention;Exergaming serious gaming;Physical Exercise;Usability},
 note = {from: ieee-cog.bib},
 number = {1},
 pages = {189--200},
 title = {Design, Implementation, and Wide Pilot Deployment of FitForAll: An Easy to use Exergaming Platform Improving Physical Fitness and Life Quality of Senior Citizens},
 volume = {20},

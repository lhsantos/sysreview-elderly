@article{Leygues19891255,
title = "La lutte communautaire contre une endémie tropicale: Croyances surnaturelles et pièges à tsétsé au Congo ",
journal = "Social Science & Medicine ",
volume = "28",
number = "12",
pages = "1255 - 1267",
year = "1989",
note = "",
issn = "0277-9536",
doi = "http://dx.doi.org/10.1016/0277-9536(89)90344-4",
url = "http://www.sciencedirect.com/science/article/pii/0277953689903444",
author = "Michel Leygues and Jean-Paul Gouteux",
keywords = "-cléendémie tropicale",

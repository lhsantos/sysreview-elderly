@article{Goldberg200126,
title = "The Association between Daily Mortality and Ambient Air Particle Pollution in Montreal, Quebec: 2. Cause-Specific Mortality ",
journal = "Environmental Research ",
volume = "86",
number = "1",
pages = "26 - 36",
year = "2001",
note = "",
issn = "0013-9351",
doi = "http://dx.doi.org/10.1006/enrs.2001.4243",
url = "http://www.sciencedirect.com/science/article/pii/S0013935101942434",
author = "Mark S. Goldberg and Richard T. Burnett and John C. Bailar III and Jeffrey Brook and Yvette Bonvalot and Robyn Tamblyn and Ravinder Singh and Marie-France Valois and Renaud Vincent",
keywords = "cause-specific mortality",
keywords = "respiratory diseases",
keywords = "cardiovascular diseases",
keywords = "diabetes mellitus",
